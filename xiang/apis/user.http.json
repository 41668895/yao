{
  "name": "系统用户接口",
  "version": "1.0.0",
  "description": "系统用户API",
  "group": "xiang/user",
  "guard": "bearer-jwt",
  "paths": [
    {
      "path": "/captcha",
      "method": "GET",
      "guard": "-",
      "process": "xiang.user.Captcha",
      "in": [":query"],
      "out": {
        "status": 200,
        "type": "application/json"
      }
    },
    {
      "path": "/login",
      "method": "POST",
      "guard": "-",
      "process": "xiang.user.Login",
      "in": ["$payload.email", "$payload.password", "$payload.captcha"],
      "out": {
        "status": 200,
        "type": "application/json"
      }
    },
    {
      "path": "/token",
      "method": "POST",
      "guard": "-",
      "process": "xiang.user.Token",
      "in": ["$payload.key", "$payload.secret"],
      "out": {
        "status": 200,
        "type": "application/json"
      }
    },
    {
      "path": "/info",
      "method": "GET",
      "process": "xiang.user.Info",
      "in": [],
      "out": {
        "status": 200,
        "type": "application/json"
      }
    },
    {
      "path": "/token/refresh",
      "method": "GET",
      "process": "xiang.user.TokenRefresh",
      "in": [],
      "out": {
        "status": 200,
        "type": "application/json"
      }
    }
  ]
}
